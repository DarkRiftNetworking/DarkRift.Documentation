{
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": [
            "DarkRift 2/DarkRift/**.cs",
            "DarkRift 2/DarkRift.Client/**.cs",
            "DarkRift 2/DarkRift.Server/**.cs"
          ],
          "exclude": [
            "**/bin/**",
            "**/obj/**",
            "_site/**"
          ]
        }
      ],
      "dest": "reference",
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "reference/**.yml",
          "reference/index.md"
        ]
      },
      {
        "files": [
          "getting_started/**.md",
          "getting_started/**/toc.yml"
        ]
      },
      {
        "files": [
          "advanced/**.md",
          "advanced/**/toc.yml"
        ]
      },
      {
        "files": [
          "configuration/**.md",
          "configuration/**/toc.yml"
        ]
      },
      {
        "files": [
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "overwrite/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default"
    ],
    "postProcessors": [],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false
  }
}